<h1>Mis posts</h1>
<table class="table">
	<tr>
		<th>Titulo</th>
		<th>Texto</th>
		<th>NÂ° comentarios</th>
		<th></th>
	</tr>	

	<% @posts.each do |post| %>
	<tr>
		<td><%= post.title %></td>
		<td><%= post.text %></td>
		<td><%= post.comments.count %></td>
		<td>	
			<div class="btn-group">
 				<%= link_to 'Show', post_path(post), :class => 'btn btn-success btn-sm' %>
  				<%= link_to 'Edit', edit_post_path(post), :class => 'btn btn-warning btn-sm' %>
  				<%= link_to 'Destroy', post_path(post), method: :delete, data: {confirm: 'Estas segurin???'}, :class =>'btn btn-mini btn-danger btn-sm' %>
			</div>
		</td>
	</tr>
	<% end %>
</table>

<%= link_to 'Nuevo Post', new_post_path, :class => 'btn btn-primary btn-sm' %>